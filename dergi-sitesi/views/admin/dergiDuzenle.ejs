<%- include('../partials/header.ejs') %>

<h1>Dergi Düzenle</h1>

<form action="/dergiler/<%= dergi.dergi_id %>/duzenle" method="POST">
    <label for="konu">Konu:</label>
    <input type="text" id="konu" name="konu" value="<%= dergi.konu %>" required>

    <label for="aciklama">Açıklama:</label>
    <textarea id="aciklama" name="aciklama"><%= dergi.aciklama %></textarea>

    <label for="resim">Resim URL:</label>
    <input type="text" id="resim" name="resim" value="<%= dergi.resim %>" required>

    <!-- Diğer bilgileri ekle -->

    <button type="submit">Dergiyi Düzenle</button>
</form>

<div class="resim-goster">
    <img src="<%= dergi.resim %>" alt="<%= dergi.konu %>">
</div>

<%- include('../partials/footer.ejs') %>