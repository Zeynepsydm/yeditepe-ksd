<div class="container mt-4">
    <div class="row">
        <% dergiler.forEach(dergi => { %>
            <div class="col-md-4 mb-4">
                <div class="custom-card">
                    <img src="<%= dergi.resim %>" alt="<%= dergi.baslik %>">
                    <div class="custom-card-content">
                        <h5 class="custom-card-title"><%= dergi.dergi_basligi %></h5>
                        <p class="custom-card-text"><%= dergi.aciklama.substring(0, 100) %>...</p>
                        <a href="/dergiler/<%= dergi.dergi_id %>" class="btn btn-custom">Ä°ncele</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
