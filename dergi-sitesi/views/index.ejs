<%- include('./partials/header.ejs',) %>
<%- include('./partials/loader.ejs') %>
<div class="container mt-4">
    <div class="row">
        <% dergiler.forEach(dergi => { %>
            <div class="col-md-4 mb-4">
                <div class="card index-img">
                    <img src="<%= dergi.resim %>" class="card-img-top" alt="<%= dergi.baslik %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= dergi.dergi_basligi %></h5>
                        <p class="card-text"><%= dergi.aciklama.substring(0, 100) %>...</p>
                        <a href="/dergiler/<%= dergi.dergi_id %>" class="btn btn-primary">İncele</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<footer class="c-text">
    <p>&copy; 2024 Yeditepe Kültür ve Sanat Dergisi Tüm hakları saklıdır.</p>
</footer>
<%- include('./partials/footer.ejs') %>