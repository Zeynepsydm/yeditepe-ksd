<!-- views/partials/header.ejs -->

<!DOCTYPE html>
<html lang="tr" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Lato:wght@300&display=swap" rel="stylesheet">
    <title>YEDİTEPE KÜLTÜR VE SANAT DERGİSİ</title>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="logo">
            <img src="/images/logoRemovedBackground.png" alt="LOGO" height="118" width="120">
        </a>
        <input type="checkbox" id="toggler">
        <label for="toggler"><i class="fa fa-bars"></i></label>
        <div class="menu">
            <ul class="list">
                <% if (userS && userS.username) { %>
                    <!-- Kullanıcı giriş yapmışsa -->
                    <li class="navbar">
                        <span class="item">Merhaba, <%= userS.firstName %></span>
                    </li>
                    <li class="navbar"><a href="/">Anasayfa</a></li>
                    <li class="navbar"><a href="/hakkimizda">Hakkımızda</a></li>
                    <li class="navbar"><a href="#">İletişim</a></li>
                    <li><i class="fa fa-user"></i></li>
                    <% if(userS && userS.role==='admin'){ %>
                        <!-- Kullanıcı yöneticiyse -->
                        <li class="item">
                            <a class="navbar" href="/admin/Panel">Kontrol Paneli</a>
                        </li>
                    <% } %>
                    
                <% } else { %>
                    <!-- Kullanıcı giriş yapmamışsa -->
                    <li class="navbar">
                        <a class="item" href="/auth/giris">Giriş Yap</a>
                    </li>
                    <li class="navbar">
                        <a class="item" href="/auth/kayit">Kayıt Ol</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>