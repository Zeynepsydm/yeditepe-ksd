<!-- views/partials/header.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css"> <!-- Bu satırı güncelledim -->
    <title>YEDİTEPE KÜLTÜR VE SANAT DERGİSİ</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Yedi Tepe Kültür Ve Sanat Dergisi</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if (userS && userS.username) { %>
                    <!-- Kullanıcı giriş yapmışsa -->
                    <li class="text-end nav-item">
                        <span class="nav-link">Merhaba, <%= userS.firstName %></span>
                    </li>
                <% } else { %>
                    <!-- Kullanıcı giriş yapmamışsa -->
                    <li class="text-end nav-item">
                        <a class="nav-link" href="/auth/giris">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/kayit">Kayıt Ol</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>